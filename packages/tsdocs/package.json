{
  "name": "@loopback/tsdocs",
  "description": "Sleek, intuitive, and powerful documentation site generator",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.9"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/strongloop/@loopback/tsdocs.git"
  },
  "scripts": {
    "build": "node ../build/bin/compile-package es2017 --outDir dist",
    "clean": "node ../build/bin/run-clean loopback-tsdocs*.tgz dist package api-docs",
    "pretest": "npm run build",
    "test": "node ../build/bin/run-mocha \"test\"",
    "verify": "npm pack && tar xf loopback-tsdocs*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "markdown": "~0.5.0",
    "marked": "^0.5.0",
    "optimist": "^0.6.0",
    "strong-task-emitter": "^0.0.8",
    "typedoc": "^0.13.0",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "@types/debug": "0.0.31",
    "@types/ejs": "^2.6.0",
    "@types/marked": "^0.4.0",
    "@types/node": "^10.11.2",
    "@types/underscore.string": "0.0.32",
    "chai": "^4.1.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "bin": {
    "tsdocs": "./bin/cli.js"
  },
  "license": "MIT"
}
